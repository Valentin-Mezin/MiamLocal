		{% block stylesheets %}

        <link rel="stylesheet" href={{ asset('css/style.css') }} />
        {% endblock %}		

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
