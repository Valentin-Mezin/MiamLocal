{% extends 'base.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}

	<h1>Liste des produits</h1>

	{# {% if user %}
		        <p>Bonjour {{ user.userSeller.firstName }}</p>
		    {% else %}
		        <p>Bonjour visiteur</p>
		    {% endif %} #}

	<table>
		<thead>
			<tr>
				<th>Titre</th>
				<th>Description</th>
				<th>Prix</th>
				<th>Photo</th>
				<th>stock</th>

				<!-- Autres colonnes si nÃ©cessaire -->
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.title }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.productMedia }}</td>
					<td>{{ product.stock }}</td>
					{# <td>{{ product.category }}</td> #}
					{# <td>{{ product.unit }}</td> #}

					<td>
						<a class="btn btn-info" href={{url('app_product_update', {'id': product.id} )}}>Modifier</a>
					</td>
					<td>
						<a class="btn btn-danger" href={{url('app_product_delete', {'id': product.id} )}}>Supprimer</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
